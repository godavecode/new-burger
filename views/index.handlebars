<!--h2>Burgers waiting to be devoured!</h2-->

<div class="container">
  <div class="burgericon" class="col-md-6">
    <div class="row text-center">
      <div class="col-md-12">
        <div class="burger">
          <!--img src="assets/img/theburger.png" class="mainburger" alt="burger"-->
          <div class="blue-box">
            <div class="top-bread">
              <div class="seeds"></div>
              <div class="seeds2"></div>
            </div>
            <div class="veg"></div>
            <div class="meat"></div>
            <div class="cheese"></div>
            <div class="bigmeat"></div>
            <div class="bottom-bread"></div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="text-down" class="col-md-12">
    <h1>Eat a Super-Burger!</h1>
    <h3 id="description"> We have all kinds of special burgers!</h3>
    <h3>Use the "Place Your Order" button below to Dine!</h3>
  </div>

  <div class="container1" class="col-md-12">
    <div class="left-menu" class="col-md-6">
      <h2 class="subtitle">Ready to Eat!</h2>
      <ol>
        {{#each burgers}}
          {{#unless this.devoured}}
            <li>
              {{this.burger_name}}
            </li>

            <form class="button-left" action="burgers/delete/{{this.id}}?_method=DELETE" method="POST">
              <input type="hidden" name="id" value={{this.id}}>
              <button type="submit" class="btn btn-warning btn-right">DELETE!</button>
            </form>
            <form class="button-left" action="burgers/update/{{this.id}}?_method=PUT" method="POST">
              <input type="hidden" name="devoured" value="true">
              <button type="submit" class="btn btn-success btn btn-primary btn-right">DEVOUR!</button>
            </form>
          {{/unless}}
        {{/each}}
      </ol>
    </div>

    <div class="right-menu" class="col-md-6">
      <h2 class="subtitle">Already eaten!</h2>
      <ol>
        {{#each burgers}}
          {{#if this.devoured}}
            <li>
              {{this.burger_name}}
            </li>

            <form class="button-left" action="burgers/delete/{{this.id}}?_method=DELETE" method="POST">
              <input type="hidden" name="id" value={{this.id}}>
              <button type="submit" class="btn btn-warning btn-right">DELETE!</button>
            </form>
            <form class="button-left" action="burgers/update/{{this.id}}?_method=PUT" method="POST">
              <input type="hidden" name="devoured" value="false">
              <button type="submit" class="btn btn-success btn-right">UN DEVOUR!</button>
            </form>
          {{/if}}
        {{/each}}
      </ol>
    </div>
  </div>

    <div class="my-form" class="col-md-12">
        <form action="burgers/create" method="POST">
        <div class="form-group">
          <label for="ca">Order Your Burger Here: </label>
          <input type="text" id="ca" name="name" maxlength="50" size="30">
        </div>
        <div class="you-hide">
          <div class="form-check">
            <label class="form-check-label" for="devoured">
            <input class="form-check-input" type="radio" name="devoured" id="exampleRadios1" value="0" checked>
              Default radio
            </label>
          </div>
          <div class="form-check">
            <input class="form-check-input" type="radio" name="devoured" id="exampleRadios2" value="1">
            <label class="form-check-label" for="exampleRadios2">
              Second default radio
            </label>
          </div>
        </div>
        <button type="submit" class="btn btn-danger place-order">Place Your Order</button>
      </form>
    </div>
</div>
